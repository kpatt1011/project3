<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @user.name %>
</p>

<p>

  <b>Is admin:</b>
  <%= @user.is_admin %>
</p>

<p>
  <b>Key:</b>
  <%= @user.key %>
</p>

<p>
  <b>Group:</b>
  <%= @user.group.name %>
</p>

<p>

  <b>Group Members</b>

  <% @user.group.users.each do |u| %>
  <br/>
  <tr>
    <%= link_to u.name, user_path(u) %>
  </tr>
  <br/>
  <% end %>

</p>



<p>
	<b>Recieved Messages</b>
  <br/>
	<% @user.messages.each do |m| %>
  <tr>
    <%= link_to m.from, message_path(m) %>
    <br/>
  </tr>

  <% end %>
</p>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
