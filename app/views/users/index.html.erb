<h1>Listing users</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Is admin</th>
    <th>Group</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
   <td  style="padding-right:10px;"><%= user.name %></td>
    <td  style="padding-right:10px;"><%= user.is_admin %></td>
    <td  style="padding-right:10px;"><%= button_to 'Show', user, :class => "btn btn-info btn-mini",  :method => :get %></td>
    <td  style="padding-right:10px;"><%= button_to 'Edit', edit_user_path(user), :class => "btn btn-primary btn-mini",  :method => :get %></td>
    <td  style="padding-right:10px;"><%= button_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger btn-mini",  :method => :get %></td>
  </tr>
<% end %>
</table>

