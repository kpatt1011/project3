<h3>Change Group<h3>

<%= form_for(current_user) do |f| %>
  <% if current_user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(current_user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% current_user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <p style="font-size:12px;">You can obtain the Group ID number from a current member of the group. This requires you to have contact with them outside of this site.</p>

  <p style="font-size:12px;">To remove yourself from all groups just submit this form with a 0 as the ID number. </p>
  <br/>
  
  <%= f.collection_select(:group_id, @groups, :id, :name, {:prompt => true}) %>

   <div class="actions">
    <%= f.submit %>
  </div>

  <% end %>
