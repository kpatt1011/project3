<h1>Listing messages</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th>From</th>
    <th>To</th>
    <th>Image</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @messages.each do |message| %>
  <tr>
    <td><%= message.title %></td>
    <td><%= message.body %></td>
    <td><%= message.from %></td>
    <td><%= message.to %></td>
    <td><%= image_tag message.associated_images %></td>
    <td><%= link_to 'Show', message %></td>
    <td><%= link_to 'Edit', edit_message_path(message) %></td>
    <td><%= link_to 'Destroy', message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

